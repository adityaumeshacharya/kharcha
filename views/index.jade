extends layout
block content
    h1 Welcome
    form(method= 'post', action='/users/members')
        .form-group
            input.form-control(name='date' type='date' model='date')

        .form-group
            input.form-control(name='description' type='text' model='description' placeholder='Description')

        .form-group
            select.form-control(name='typeOftransaction', id='typeOftransaction')
                option(value='0') -- Select type of transaction --
                option(value='1') Credit
                option(value='2') Debit

        .form-group
            input.form-control(name='amount' type='number' model='amount' placeholder='Amount')

        input.btn.btn-primary(type='submit',name='submit',value='Add Transaction')
        